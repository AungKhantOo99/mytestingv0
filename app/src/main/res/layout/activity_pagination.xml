    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PaginationActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pagiantion"
        android:layout_width="match_parent"
